<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/error_image_size"
        android:padding="@dimen/common_margin_padding_medium">

        <!--<ImageView
            android:id="@+id/errorLogoImageView"
            android:layout_width="@dimen/error_image_size"
            android:layout_height="@dimen/error_image_size"
            android:src="@drawable/error_logo"
            android:layout_centerHorizontal="true"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_padding_medium"
            android:orientation="vertical"
            android:padding="@dimen/common_margin_padding_medium">
            <!--android:layout_below="@+id/errorLogoImageView"-->

            <TextView
                android:id="@+id/errorMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:alpha="0.87"
                android:padding="@dimen/common_margin_padding_medium"
                android:textColor="@android:color/black"
                android:textSize="@dimen/common_text_small" />


            <Button
                android:id="@+id/retryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/section_label"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_margin_padding_medium"
                android:alpha="0.87"
                android:text="@string/button_retry"
                android:textColor="@android:color/black" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
