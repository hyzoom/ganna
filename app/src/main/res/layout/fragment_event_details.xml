<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:rotationY="180">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:gravity="center"
            android:text="test"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/startDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/endDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/sds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:text="عن المؤتمر"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/structureTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="13dip"
                android:layout_marginTop="0dip"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal">


            <Button
                android:id="@+id/sessionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/sessions_img1"
                android:text="جلسات المؤتمر"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/newsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/news_img2"
                android:text="أخبار المؤتمر"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rulesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/rules_img2"
                android:text="قواعد المؤتمر"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addQuestionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/question_img2"
                android:text="أضف سؤال"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/attendeesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/attendee1"
                android:text="السادة الحضور"
                android:textColor="#000000"
                android:textStyle="bold" />


            <Button
                android:id="@+id/sponsorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/ro3aa_img1"
                android:text="الرعاة"
                android:textColor="#000000"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/locationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/location_img1"
                android:text="خريطة المؤتمر"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/playSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/play_img"
                android:text="أغنية جنة"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/stopSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/stop_img"
                android:text="أغنية جنة"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="gone" />

            <VideoView
                android:id="@+id/ganna_song2"
                android:layout_width="1dip"
                android:layout_height="1dip" />

            <Button
                android:id="@+id/siteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/url_img2"
                android:text="زوروا موقعنا"
                android:textColor="#000000"
                android:textStyle="bold" />


            <Button
                android:id="@+id/surveyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/survey_img2"
                android:text="الاستبيانات"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/faceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/face_img1"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/twitterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/twitter_img1"
                android:textColor="#000000"
                android:textStyle="bold" />


            <Button
                android:id="@+id/linkedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/linked_img1"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/notesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </LinearLayout>


</ScrollView>
