<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rotationY="180"
    android:layout_marginLeft="@dimen/common_margin_padding_medium"
    android:layout_marginRight="@dimen/common_margin_padding_medium"
    android:layout_marginBottom="@dimen/common_margin_padding_medium"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/card_corner_radius"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin_padding_medium">

        <TextView
            android:id="@+id/surveyNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
