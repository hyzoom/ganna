<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_margin="@dimen/common_margin_padding_medium"
        android:layout_alignParentRight="true"
        android:src="@drawable/back1" />

    <Button
        android:id="@+id/playVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_play"
        android:text="Video"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_text_title"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:layout_marginTop="@dimen/common_margin_padding_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_padding_medium"
        android:layout_toLeftOf="@+id/imageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:textColor="#035680"
            android:textSize="@dimen/common_text_title_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lecturerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:textColor="#035680"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:gravity="left"/>

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:textColor="#3282ab"
            android:textSize="13sp"
            android:layout_gravity="left"
            android:gravity="left"/>

    </LinearLayout>

</LinearLayout>
